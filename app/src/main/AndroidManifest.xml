        </activity>
        <activity android:name=".Choice1Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.madlibs.MainActivity" />
        </activity>
        <activity android:name=".Story1Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.madlibs.Choice1Activity" />
